<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myradio="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/templatenavigationbar"></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="#fafafa" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/feedback_yijian"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp"
            android:gravity="top|left"
            android:textColorHint="@color/nine"
            android:hint="请向我们传达您的意见/建议/或投诉，我们将在3个月内通过系统邮件通知您"
            android:background="@drawable/edit_shape"/>
        <TextView
            android:id="@+id/feedback_tijiao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@mipmap/button"
            android:layout_marginTop="56dp"
            android:text="提交"
            android:textSize="16sp"
            android:textColor="#fff"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="2dp"
            android:text="任何意见经采纳或证实，可获得一定积分奖励"
            android:textSize="16sp"
            android:textColor="#777"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>
