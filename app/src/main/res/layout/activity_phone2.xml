<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.wode.PhoneActivity">
    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/templatenavigationbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="新手机号:"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/phone_phone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:background="@null"
            android:maxLength="11"
            android:inputType="number"
            android:textSize="16sp"
            android:hint="请输入新手机号"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wholehx"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/phone_yzm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:background="@null"
            android:textColorHint="@color/wholezitiinfo"
            android:inputType="number"
            android:textSize="16sp"
            android:hint="请输入验证码"/>
        <TextView
            android:id="@+id/phone_yzmbtn"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_height="30dp"
            android:text="获取验证码"
            android:textColor="@color/wholeSYTime"
            android:textSize="16sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/phone_tijiao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/button"
        android:text="完成"
        android:textSize="16sp"
        android:textColor="@color/white"/>
</LinearLayout>