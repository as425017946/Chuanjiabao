            <!--android:onClick="onClick"-->

            <!--myradio:drawableTop="@drawable/selector_service"-->
            <!--myradio:drawableSize="20dp"-->


            <!--android:gravity="center"-->
            <!--android:text="订单"-->
            <!--android:textSize="13sp"-->
            <!--/>-->

        <friendgoods.vidic.com.generalframework.widget.MyRadioButton
            android:id="@+id/mine_radio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#fff"
            android:button="@null"
            android:clickable="true"
            android:onClick="onClick"
            myradio:drawableTop="@drawable/selector_mine"
            android:textColor="@drawable/selector_click_text_color"
            myradio:drawableSize="20dp"
            android:gravity="center"
            android:text="我的"
            android:textSize="13sp"
            />

    </RadioGroup>


</RelativeLayout>
