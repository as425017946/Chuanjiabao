<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:swipeEnable="true"
    app:leftSwipe="true"
    app:ios="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/guanli_more_name"
                        android:layout_width="130dp"
                        android:layout_height="20dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/guanli_more_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/guanli_more_moren"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text=""
                        android:textColor="@color/wholeSYTime"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/guanli_more_dizhi"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text=""
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/next"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnTop"
        android:layout_width="100dp"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        android:text="设为默认"
        android:textSize="13sp"
        android:textColor="@android:color/white"/>

   <LinearLayout
       android:id="@+id/btndelete"
       android:layout_width="60dp"
       android:layout_height="64dp"
       android:layout_marginTop="10dp"
       android:orientation="horizontal"
       android:background="@color/wholeSYHX"
       android:gravity="center">
       <ImageView
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:src="@mipmap/deletes"/>
   </LinearLayout>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>