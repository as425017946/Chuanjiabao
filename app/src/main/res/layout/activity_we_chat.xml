<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.wode.WeChatActivity">
    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/templatenavigationbar"></include>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/wechat_eit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/wholezitiinfo"
            android:background="@null"
            android:singleLine="true"
            android:textSize="16sp"
            android:hint="请输入微信号"/>
        <TextView
            android:id="@+id/wechat_bind"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="绑定微信"
            android:textColor="@color/wholeSYTime"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>