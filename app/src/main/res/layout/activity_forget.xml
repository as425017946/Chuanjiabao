<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/templatenavigationbar"></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="忘记密码"
        android:textColor="#000"
        android:textSize="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_forget_phone"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:inputType="number"
            android:hint="输入手机号码"
            android:textColorHint="@color/nine"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/wholehx"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_forget_yzm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="输入验证码"
            android:inputType="number"
            android:maxLength="20"
            android:textColorHint="@color/nine"
            android:singleLine="true"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btn_forget_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/fillettext"
            android:text="获取验证码" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/wholehx"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_forget_newpassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="输入新密码(数字加英文8-20位)"
            android:textColorHint="@color/nine"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/wholehx"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_forget_queren"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="输入确认密码(数字加英文8-20位)"
            android:textColorHint="@color/nine"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/wholehx"></View>
    <Button
        android:id="@+id/btn_chognzhi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/button"
        android:text="重置密码"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="@color/white"/>

</LinearLayout>